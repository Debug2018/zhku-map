/* pages/map/details.wxss */

.description {
  padding: 20rpx 20rpx;
  line-height: 30px;
  font-size: 30rpx;
}

.swiper {
  height: 40vh;
}

.swiper-image {
  width: 100%;
}

.building {
  height: 10vh;
  display: flex;
  margin: auto 20rpx;
}

.buildingName {
  margin: auto 15rpx;
  width: 80%;
  color: #409eff;
  font-size: 50rpx;
  white-space: nowrap;
}

.nav_map {
  margin: auto 10rpx;
}

.nav_map image {
  width: 80rpx;
  height: 80rpx;
}

.descript {
  width: 100%;
  min-height: 49vh;
}

.descript rich-text {
  font-size: 30rpx;
  color: #303133;
}

.descript rich-text p {
  text-indent: 2em;
  color: #409eff;
}
