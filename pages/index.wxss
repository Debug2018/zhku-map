page {
  height: 100%;
  width: 100%;
  background-color: #d9afd9;
  background-image: linear-gradient(0deg, #d9afd9 0%, #97d9e1 100%);
}

.school {
  width: 100%;
}

.iiii {
  width: 100%;
}

.option {
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  margin-top: 4rpx;
  margin-bottom: 4rpx;
}

.text-icon {
  display: flex;
  width: 440rpx;
  height: 60rpx;
  margin-top: 80rpx;
  justify-content: center;
  align-content: center;
  align-items: center;
  font-size: 28rpx;
  background-color: #fff;
  color: #000;
  border-radius: 40rpx;
}

.pa-logo {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 140rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 100%;
}

.copyright {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 42%;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  font-size: 27rpx;
  text-align: center;
  line-height: 150%;
  text-shadow: #114710 1rpx 0 0, #16b990 0 1rpx 0, #114710 -1rpx 0 0, #16b990 0 -1rpx 0;
}
